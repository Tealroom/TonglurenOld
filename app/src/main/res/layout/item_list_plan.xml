<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/plan_list_firstImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/plan_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        app:layout_constraintLeft_toRightOf="@+id/plan_list_firstImage"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/plan_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-7-7"
        app:layout_constraintTop_toBottomOf="@+id/plan_list_title"
        app:layout_constraintLeft_toRightOf="@+id/plan_list_firstImage"/>
    <TextView
        android:id="@+id/plan_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小队出行"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/plan_list_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已经完成"
        app:layout_constraintLeft_toRightOf="@+id/plan_list_firstImage"
        app:layout_constraintTop_toBottomOf="@+id/plan_list_time"/>
    <TextView
        android:id="@+id/operation1_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66CCFF"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/plan_list_firstImage"
        />



</android.support.constraint.ConstraintLayout>