<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.NewUpdatingFragment">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_updating_content_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/layout_fragment_head1">

        </include>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_updating_content_content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fragment_updating_content_top"
        >
        <TextView
            android:id="@+id/fragment_updating_content_content1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑："
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@+id/fragment_updating_content_content1_title"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_updating_content_content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fragment_updating_content_content1"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/plus23"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>